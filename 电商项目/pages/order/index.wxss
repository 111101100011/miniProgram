page {
  padding-bottom: 90rpx;
}

.uer_info_row {
  display: flex;
  padding: 20rpx;
}
.uesr_info {
  flex: 5;
}
.uesr_phone {
  flex: 3;
  text-align: right;
}
.cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  color: rgb(130, 202, 133);
  border-top: 1rpx solid rgb(130, 202, 133);
  border-bottom: 1rpx solid rgb(130, 202, 133);
}

.cart_item {
  display: flex;
}

.cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ima1 {
  width: 80%;
}
.cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_num_tool {
  display: flex;
}

.goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.foot_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1px solid #ccc;
}

.total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.total_price {
}
.total_text {
  color: var(--themeColor);
  font-style: 34rpx;
  font-weight: 600;
}
.order_pay {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  justify-content: center;
  align-items: center;
  display: flex;
}
